<table class="profile" summary="Profile information">
<tr>
<td class="main">

<h1>
<%= gravatar_for @user %><%="  	      "%><%= @user.name %></b><br />
</h1>



<strong><font size="4"><b>Department: </strong> <%= @user.department %></font></b><br /><br/>

<table class="microposts" summary="User microposts">
<% Attachment.all.reverse.each do |t| %>
<%if current_user.cn1==t.course ||current_user.cn2==t.course ||current_user.cn3==t.course ||current_user.cn4==t.course ||current_user.cn5==t.course ||current_user.cn6==t.course||current_user.cn7==t.course%>  
