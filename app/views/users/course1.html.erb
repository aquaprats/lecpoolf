

<h1><strong><%=current_user.cn1%></strong></h1>


 <%= form_tag attachments_index2_path, :html => {:method => :get} do |f| %>
   <%= text_field_tag 'search[filename_contains]' %>
    <%= submit_tag "Search By Filename", :class => "search-button", :name => "submit", :id => 'search_submit' %>

  <% end %>
<br />

<%Attachment.all.each do |t|%>

<%if current_user.cn1==t.course%>

<%a=0%>
<a href ="/attachments/<%=t.id%>/file"><%=t.filename%></a> <br />  Posted By:<%=t.user.name%> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%if t.content_type=="image/jpeg"||t.content_type=="image/png"||t.content_type=="image/jpg"||t.content_type=="image/gif"||t.content_type=="image/tif"%>
<a href="/attachments/<%=t.id%>/file/view1">View</a><br/>
<%else%>
<a href="/attachments/<%=t.id%>/file/view">View</a><br/>
<%end%>
<%Vote.all.each do |f|%>
<%if f.voteable_id==t.id && f.voteable_type=="Attachment" && f.vote%>
<%a=a+1%>
<%end%>
<%end%>
<b><font size="6"><%=a%></font></b>
<a href="/attachments/<%=t.id%>/vote_up1/" data-method="post" rel="nofollow"><img src="/images/thumbs_up.png" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>



<%a=0%>
<%Vote.all.each do |f|%>
<%if f.voteable_id==t.id && f.voteable_type=="Attachment" && !f.vote%>
<%a=a+1%>
<%end%>
<%end%>
<b><font size="6"><%=a%></font></b>
<a href="/attachments/<%=t.id%>/vote_down1/" data-method="post" rel="nofollow"><img src="/images/thumbsdown.png" />&nbsp;&nbsp;</a><br/><br/>

<%end%>
<%end%>

