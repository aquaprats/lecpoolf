<h3>Search Results:</h3>
<%a=0%>
<%@attachments.each do |t|%>
<%if t.course==current_user.cn1%>
<%a=a+1%>
<%end%>
<%end%>
<strong><%=a%> Matching Results Found!</strong><br /><br />
<%@attachments.each do |t|%>

<%a2=0%>

<%if t.course==current_user.cn1%>
<a href ="/attachments/<%=t.id%>/file"><%=t.filename%></a>  | Posted By:<%=t.user.name%> |
<%if t.content_type=="image/jpeg"||t.content_type=="image/png"||t.content_type=="image/jpg"||t.content_type=="image/gif"||t.content_type=="image/tif"%>
<a href="/attachments/<%=t.id%>/file/view1">View</a><br/>
<%else%>
<a href="/attachments/<%=t.id%>/file/view">View</a><br/>
<%end%>
<a href="/attachments/<%=t.id%>/vote_up/" data-method="post" rel="nofollow"><br/><img src="/images/thumbs_up.png" />&nbsp;&nbsp;</a>

<%Vote.all.each do |f|%>
<%if f.voteable_id==t.id && f.voteable_type=="Attachment" && f.vote%>
<%a2=a2+1%>
<%end%>
<%end%>
<b><%=a2%> likes!</b>
<%a2=0%>
<a href="/attachments/<%=t.id%>/vote_down/" data-method="post" rel="nofollow"><img src="/images/thumbsdown.png" />&nbsp;&nbsp;</a>
<%Vote.all.each do |f|%>
<%if f.voteable_id==t.id && f.voteable_type=="Attachment" && !f.vote%>
<%a2=a2+1%>
<%end%>
<%end%>
<b><%=a2%> dislikes!</b><br /><br />


<%end%>
<%end%>

