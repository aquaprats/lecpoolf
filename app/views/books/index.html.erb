<h1>Listing books</h1>

<table>
  <tr>
    <th>User</th>
    <th>Bname</th>
    <th>Author</th>
    <th>Edition</th>
    <th>Cn</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.user_id %></td>
    <td><%= book.bname %></td>
    <td><%= book.author %></td>
    <td><%= book.edition %></td>
    <td><%= book.cn %></td>
    <td><%= book.category %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

