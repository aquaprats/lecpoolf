<h1>New Message</h1>

<%= form_for(@message) do |f| %>
 
 
  <div class="field">
    <%= f.label :email,"Email" %><br />
    <%= f.text_field :email, :size => 60 %>
  </div>
  <div class="field">
    <%= f.label :subject,"Subject" %><br />
    <%= f.text_field :subject, :size => 60 %>
  </div>
  <div class="field">
    <%= f.label :body,"Message" %><br />
    <%= f.text_area :body, :cols => 60, :rows => 5 %>
  </div>
  <div class="actions">
    <%= f.submit "Send Message" %>
  </div>
<% end %>
