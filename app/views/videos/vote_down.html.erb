<%= form_tag videos_search2_path, :html => {:method => :get} do |f| %>
<%= text_field_tag :title_contains %>
<%= submit_tag "Search By Video Name", :class => "search-button", :name => "submit", :id => 'search_submit' %>
<% end %>



<h2>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Upload a Youtube Video",videos_create_path%>
</h2>

<%Video.all.each do |t| %>
<% a=t.video_code.split('/').last%>
<% b=t.video_code.split('/')%>
<%c=b[2]%>
<%if c=="youtu.be" %>
<p><strong>Title:<%=t.title%></strong></p>
<p><strong>Posted By:<%=t.user.name%></strong></p>
<a href="/videos/<%=t.id%>/vote_up/" data-method="post" rel="nofollow"><br/><img src="/images/thumbs_up.png" />&nbsp;&nbsp;</a>
<%d=0%>
<%Vote.all.each do |f|%>
<%if f.voteable_type=="Video" && f.voteable_id==t.id && f.vote%>
<%d=d+1%>
<%end%>
<%end%>
<b><%=d%> likes!</b>
<%d=0%>
<a href="/videos/<%=t.id%>/vote_down/" data-method="post" rel="nofollow"><img src="/images/thumbsdown.png" />&nbsp;&nbsp;</a>
<%Vote.all.each do |f|%>
<%if f.voteable_type=="Video" && f.voteable_id==t.id &&  !f.vote%>
<%d=d+1%>
<%end%>
<%end%>
<b><%=d%> dislikes!</b><br /><br />

<iframe width="560" height="349" src="http://youtube.com/embed/<%=a%>" frameborder="0" allowfullscreen></iframe><br/><br/><br/>
<%end%>

<%end%>

